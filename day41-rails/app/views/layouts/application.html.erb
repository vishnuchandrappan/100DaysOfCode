  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">

    <header>
      <nav>
        <div class="nav-logo">RoR Tutorial</div>
        <div class="nav-links">
          <%= link_to  "Home", '#' %>
          <%= link_to  "About", '#' %>
          <%= link_to  "Contact", '#' %>
        </div>
      </nav>
    </header>

    <%= yield %>
  </div>
</body>

</html>